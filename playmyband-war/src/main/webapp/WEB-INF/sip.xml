<?xml version="1.0" encoding="UTF-8"?>

<sip-app>
    <app-name>PlayMyBand</app-name>
    <display-name>PlayMyBand</display-name>
    <description>WebRTC Real Time VideoGame</description>
	
    <servlet-selection>
        <main-servlet>
            PMBSipServlet
        </main-servlet>
    </servlet-selection>

    <servlet>
        <servlet-name>PMBSipServlet</servlet-name>
        <display-name>PMBSipServlet</display-name>
        <description>PlayMyBand SIP servlet</description>
        <servlet-class>
            org.playmyband.sip.PMBSipServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <listener>
        <listener-class>
            org.playmyband.sip.PMBSipServlet
        </listener-class>
    </listener>
</sip-app>